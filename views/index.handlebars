<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <br>
        <img href="../assets/images/vsh_logo-betterVS.png" alt="hunt_logo">
        <br>
        <br>
        <h3>Enter Code</h3>
        <form class="form-inline">
          <div class="form-group">
            {{!-- <label for="inputPassword6">Insert Game Code Here:</label> --}}
            <input type="text" inputmode="numeric" minlength="9" maxlength="11" class="form-control mx-sm-3"
              aria-describedby="passwordHelpInline" id="tbNum" onkeyup="addHyphen(this)">
            {{!-- <small id="passwordHelpInline" class="text-muted">
              Must be 8-20 characters long.
            </small> --}}
            <input type="submit" value="Play">
          </div>
        </form>
